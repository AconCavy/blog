<footer class="l-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <p>@Document.GetString(WebKeys.Copyright)</p>
                <ul class="list-inline text-center small">
                    @{
                        var rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                        var atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                    }
                    @if (rssFeed != null)
                    {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss l-footer__feed"></i> RSS Feed</a>
                        </li>
                    }
                    @if (atomFeed != null)
                    {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss l-footer__feed"></i> Atom Feed</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</footer>
