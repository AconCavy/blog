<!DOCTYPE html>

<html lang="ja">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta http-equiv="Content-Security-Policy"
          content="default-src 'self' 'unsafe-inline';
img-src 'self' * data: *.w3.org; 
child-src 'none';
frame-src 'self' *.twitter.com;
font-src 'self' *.fontawesome.com;
connect-src 'self' *.fontawesome.com *.typekit.net;
style-src 'self' 'unsafe-inline';
script-src 'self' 'unsafe-eval' *.twitter.com *.typekit.net;">

    <title>@Document.GetString("PageTitle")</title>

    <link rel="icon" href="@Context.GetLink("/assets/images/favicon.svg")" type="text/svg+xml">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="@Context.GetLink("/assets/css/style.css")" type="text/css">
    <script src="@Context.GetLink("/assets/vendor/adobe/adobe_fonts.js")"></script>

    @await Html.PartialAsync("_Head.cshtml")

</head>

<body>

@await Html.PartialAsync("_Navigation.cshtml")

@await Html.PartialAsync("_Header.cshtml")

<main class="l-main">
    <div class="container">
        <div class="row">
            <div id="content">
                @if (Document.GetBool("IsPost"))
                {
                    <article>
                        <div class="card shadow-sm c-post">
                            <div class="card-body p-md-5">
                                @await Html.PartialAsync("_PostHeader.cshtml")
                                <div class="c-post-body">
                                    @RenderBody()
                                </div>
                                @await Html.PartialAsync("_PostFooter.cshtml")
                            </div>
                        </div>
                    </article>
                }
                else
                {
                    @RenderBody()
                }
            </div>
        </div>
    </div>
</main>

@await Html.PartialAsync("_Footer.cshtml")

@await Html.PartialAsync("_Scripts.cshtml")

</body>

</html>
