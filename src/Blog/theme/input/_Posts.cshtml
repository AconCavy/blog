@{
    var newer = Model.GetDocument(Keys.Previous);
    var older = Model.GetDocument(Keys.Next);
}

@foreach (var post in Model.GetChildren())
{
    @await Html.PartialAsync("_Post.cshtml", post)
}


@if (older != null || newer != null)
{
    <div class="post-nav">
        <div class="float-left">
            @if (newer != null)
            {
                <a class="btn btn-primary" href="@Context.GetLink(newer)" role="button">
                    <i class="fas fa-angle-double-left"></i>
                    Newer
                </a>
            }
        </div>
        <div class="float-right">
            @if (older != null)
            {
                <a class="btn btn-primary" href="@Context.GetLink(older)" role="button">
                    Older
                    <i class="fas fa-angle-double-right"></i>
                </a>
            }
        </div>
        <div class="clearfix"></div>
    </div>
}
